/* component/empower/empower.wxss */
.empower-mask {
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  position: fixed;
  background-color: rgba(0, 0, 0, 0.6);
}

.empower-mask .empower-content {
  width: 60vw;
  height: max-content;
  padding: 5vw;
  border-radius: 8rpx;
  top: 50%;
  left: 50%;
  position: absolute;
  transform: translate(-50%, -50%);
  background-color: #fff;
}

.empower-content .empower-text {
  line-height: 2;
  font-size: 28rpx;
}

.empower-content .button-list {
  display: flex;
  margin-top: 30rpx;
  justify-content: space-between;
}

.button-list .empower-button {
  flex: 1;
  margin: 8rpx;
  font-size: 30rpx;
}
